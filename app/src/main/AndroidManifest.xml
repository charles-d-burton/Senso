<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="burtondesign.com.senso">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission android:name="burtondesign.com.senso.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="burtondesign.com.senso.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- [START gcm_receiver] -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="burtondesign.com.senso" />
            </intent-filter>
        </receiver>
        <!-- [END gcm_receiver] -->

        <service
            android:name=".intents.GCMRegistration"
            android:exported="false">
        </service>
        <service
            android:name="burtondesign.com.senso.listeners.MyGcmListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID"/>
            </intent-filter>
        </service>
    </application>

</manifest>